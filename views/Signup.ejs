<style>
body {
    text-align: center;
}

p{
    font-size: 20px;
    text-align: left;
}

a{
    text-decoration: none;
    color: navy;
}

img {
    width: 16%;
}

.main {
    color:navy;
    font-size: 80px;
    font-weight: 900;

}

.signup-form {
    width: 500px;
    margin: 0 auto;
}

.text-field {
    border-color: navy;
    border-style: solid;
    border-width: 5px;
    font-size: 19px;
    border-radius: 7px;
    padding: 15px;
    width: 500px;
    margin-bottom: 15px;
}

.submit-btn {
    color: white;
    font-size: 25px;
    background-color: navy;
    border-radius: 50px;
    padding: 10px;
    width: 525px;
    margin-bottom: 10px;
    margin-top: 15px;
}

.links {
    color: gray;
    font-size: 20px;
    text-align: center;
